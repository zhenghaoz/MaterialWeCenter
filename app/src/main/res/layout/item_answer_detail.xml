<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar_img_answer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:src="@drawable/avatar_max_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView_userName_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:text="name"
                android:textColor="@color/nliveo_black"
                android:textSize="@dimen/abc_text_size_subhead_material" />
            <TextView
                android:id="@+id/textView_signature_answer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:text="signature"
                android:textColor="@color/nliveo_black"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_answer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/imageView_agreeCount_answer"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textView_agreeCount_answer"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            android:text="0"
            android:textColor="@android:color/darker_gray"
            android:textSize="18dp" />
        <ImageView
            android:id="@+id/imageView_commentCount_answer"
            android:src="@drawable/ic_answers"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textView_commentCount_answer"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            android:text="0"
            android:textColor="@android:color/darker_gray"
            android:textSize="18dp" />
        <ImageView
            android:id="@+id/imageView_thankCount_answer"
            android:src="@drawable/ic_blue_heart"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textView_thankCount_answer"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            android:text="0"
            android:textColor="@android:color/darker_gray"
            android:textSize="18dp" />

    </LinearLayout>
</LinearLayout>
